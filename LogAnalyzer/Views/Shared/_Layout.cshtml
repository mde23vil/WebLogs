@using LogAnalyzer.Resources
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewBag.Title - My ASP.NET Application</title>

  <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap.min.css")" />

  <script src="@Url.Content("~/Scripts/jquery-2.2.3.js")" type="text/javascript"></script>
</head>
<body style="padding-top: 50px">
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header ">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false" aria-controls="navbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span> 
        </button>
        @Html.ActionLink(@Resources.ApplicationName, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
          <li>
            <a href="@Url.Action("ChangeCulture", "Service", new RouteValueDictionary() { {"lang", "ru"} })">
              <img alt="Ru" src="@Url.Content("~/Resources/Russia-icon.png")">
            </a>
          </li>
          <li>
            <a href="@Url.Action("ChangeCulture", "Service", new RouteValueDictionary() { {"lang", "en"} })">
              <img alt="En" src="@Url.Content("~/Resources/United-Kingdom-icon.png")">
            </a>
          </li>
          @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("About", "About", "Home")</li>
            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
        </ul>
      </div>
    </div>
  </nav>
  <div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
      <p>&copy; @DateTime.Now.Year - ASP .Net log analyzer application.</p>
    </footer>
  </div>

  @RenderSection("scripts", required: false)
</body>
</html>
